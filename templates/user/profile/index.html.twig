{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Evapi Solutions{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        {# Sidebar #}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="{{ asset('assets/images/default-avatar.png') }}" 
                             class="rounded-circle" 
                             width="120" 
                             alt="Avatar de {{ app.user.firstName }}">
                    </div>
                    <h5 class="card-title">{{ app.user.firstName }} {{ app.user.lastName }}</h5>
                    <p class="text-muted mb-2">{{ app.user.email }}</p>
                    {% if app.user.companyName %}
                        <p class="text-muted">
                            <i class="fas fa-building me-1"></i> {{ app.user.companyName }}
                        </p>
                    {% endif %}
                {#    <a href="{{ path('user_profile_edit') }}" class="btn btn-primary btn-sm"> #}
                    <a href="" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit me-1"></i> Modifier
                    </a>
                </div>
            </div>
        </div>

        {# Main Content #}
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="fas fa-user-circle me-2"></i>Informations personnelles
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Prénom</h6>
                            <p>{{ app.user.firstName }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Nom</h6>
                            <p>{{ app.user.lastName }}</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6>Email</h6>
                            <p>{{ app.user.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Téléphone</h6>
                            <p>{{ app.user.phone ?? 'Non renseigné' }}</p>
                        </div>
                    </div>
                    {% if app.user.companyName %}
                    <div class="row">
                        <div class="col-12">
                            <h6>Entreprise</h6>
                            <p>{{ app.user.companyName }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            {# Security Section #}
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Sécurité
                    </h4>
                </div>
                <div class="card-body">
                {#    <a href="{{ path('app_change_password') }}" class="btn btn-outline-primary"> #}
                    <a href="" class="btn btn-outline-primary">
                        <i class="fas fa-key me-1"></i> Changer mon mot de passe
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}