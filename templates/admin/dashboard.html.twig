{# templates/admin/dashboard.html.twig #}
<div class="row">
    <!-- Carte PRO RÉNOV -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5>PRO RÉNOV</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for value in projects[0].values %}
                        <li class="list-group-item d-flex justify-content-between">
                            <span>{{ value.attribute.name }} :</span>
                            <strong>{{ value.value }}</strong>
                        </li>
                    {% endfor %}
                </ul>
                <div class="mt-3">
                    <div class="alert alert-success">
                        <i class="fas fa-chart-line"></i> Augmentation leads : <strong>+42%</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques SEO -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5>Mots-clés Top</h5>
            </div>
            <div class="card-body">
                {% for keyword in seo_keywords %}
                    <span class="badge bg-secondary m-1">{{ keyword }}</span>
                {% endfor %}
            </div>
        </div>
    </div>
</div>