{% extends 'base.html.twig' %}

{% block title %}Modification du projet - {{ project.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Modifier {{ project.name }}</h1>
    
    <div class="card shadow">
        <div class="card-body">
            {{ form_start(form) }}
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <h3>Informations de base</h3>
                    {{ form_row(form.name) }}
                    {{ form_row(form.client) }}
                </div>
                
                <div class="col-md-6">
                    <h3>Mots-clés SEO</h3>
                    <div class="mb-3">
                        {% for keyword in seo_keywords %}
                            <span class="badge bg-primary me-1">{{ keyword }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <h3 class="mb-3">Caractéristiques</h3>
            <div id="values-container">
                {% for value in form.values %}
                    <div class="value-row row mb-3 p-3 bg-light rounded">
                        <div class="col-md-5">
                            {{ form_row(value.attribute) }}
                        </div>
                        <div class="col-md-5">
                            {{ form_row(value.value) }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Enregistrer
                </button>
                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                    Annuler
                </a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}