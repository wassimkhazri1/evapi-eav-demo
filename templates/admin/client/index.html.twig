{% extends 'base.html.twig' %}

{% block title %}Gestion des Clients{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des Clients</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.name }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.phone ?? 'N/A' }}</td>
                <td>
                    <a href="{{ path('admin_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun client trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_client_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouveau client
    </a>
</div>
{% endblock %}