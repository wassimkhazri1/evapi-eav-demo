{# templates/admin/project/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des Projets{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des Projets</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Client</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

{% if pagination|length == 0 %}
    <tr>
        <td colspan="3">No projects found</td>
    </tr>
{% endif %}
        {% for project in pagination %}
            <tr>
                <td>{{ project.name }}</td>
                <td>{{ project.user.username }}</td>
                                        <td>
                    <span class="badge bg-{{ project.statusClass }}">
                        {{ project.statusLabel }}
                    </span>
                </td>
                <td> 
                    <a href="{{ path('project_show', {id: project.id}) }}" class="btn btn-sm btn-primary">Voir</a>  
                    <a href="{{ path('client_project_edit', {id: project.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
        {% endfor %}
       
        </tbody>
    </table>
</div>
{% endblock %}